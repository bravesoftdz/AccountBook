<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="heading_style" parent="textStyleBig">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="textStyleSmall">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="textStyleDefault">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="default_style" parent="textStyleDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="textStyleBig">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="pass_code_btn_style">
        <item name="android:layout_height">@dimen/dp56dp</item>
        <item name="android:layout_width">@dimen/dp56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pass_code_btn_bg</item>
    </style>

    <style name="fa_pencile_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_size</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="LightPickerDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowMinWidthMinor">0dip</item>
        <item name="android:windowMinWidthMajor">0dip</item>
    </style>

    <style name="DarkPickerDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMinor">0dip</item>
        <item name="android:windowMinWidthMajor">0dip</item>
    </style>

</resources>
